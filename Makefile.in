CC = @CC@
CFLAGS = @CFLAGS@

LD = @CC@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

CFILES := $(shell find src -type f -name '*.c')
OFILES := $(CFILES:.c=.o)

.PHONY: clean

etac: $(OFILES)
	$(LD) $(OFILES) $(LDFLAGS) $(LIBS) -o $@

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	rm -f etac
	find . -type f -name '*.o' -print -delete
